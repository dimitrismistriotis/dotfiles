	name = Dimitrios Mistriotis
	email = dimitrios@mistriotis.com
	signingkey = 96EAA46DAE3289FA
[push]
	default = simple
	autoSetupRemote = true
[alias]
	plr = pull --rebase
  commitlog = log --pretty=format:'%ad - %an: %s' --date=iso
[color]
	ui = true
[merge]
	ff = no
[init]
	defaultBranch = master
[pull]
	rebase = true

# Setup from following article:
# https://blog.gitbutler.com/how-git-core-devs-configure-git/
[column]
 	ui = auto
[branch]
	sort = -committerdate
[tag]
	sort = version:refname
[fetch]
	prune = true
	pruneTags = true
	all = true
[commit]
	# gpgsign = true
	verbose = true

# Use Delta https://github.com/dandavison/delta for diffs
# brew install git-delta
[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true    # use n and N to move between diff sections
    light = false      # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default
[commit]
	gpgsign = true
